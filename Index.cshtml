@{
    ViewBag.Title = "Начална страница";
}

@model List<MVCBlog.Models.Post>
<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-6">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                Публикувано 
                @if (post.Author != null)
                {
                    @:от
                    <i>@post.Author.FullName (@post.Author.UserName)</i>
                }
                 на <i>@post.Date</i> 
            </div>
            <div class="body">@Html.Raw(post.Body)</div>
        </article>
    }
</section>
        
